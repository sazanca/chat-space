.main_chat
  .main_chat__header
    .main_chat__header__left-box
      %h2.main_chat__header__left-box__current-group
        = @group.name
      %p.main_chat__header__left-box__member-list
        - @group.users.each do |user| 
          = user.name
    .main_chat__header__edit-btn
      = link_to edit_group_path(@group.id) do
        Edit
        -# = class: 'main_chat__header__edit-btn'
  .main_chat__messages
    = render @messages
          
  .form
    = form_for [@group, @message] do |f|
      .input-box 
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__file'
      = f.submit 'Send', class: 'submit-btn'
